
<div class="row">
  <div class="col-xs-2">
    <ul class="nav nav-pills nav-stacked">
      <li class="active"><%= link_to "Contacts", root_path%></li>
      <li><%= link_to "Agenda", agenda_path%></li>
    </ul>
  </div>

  <div class="col-xs-10">

  <%= render_activities(@activities, {display: :i18n}) %>

    <table class='table table-striped'>

      <tr>
        <th class="text-center">Email</th>
        <th class="text-center">Contact</th>
        <th class="text-center">Tel</th>
        <th class="text-center">Picture</th>
      </tr>

      <% current_user.contacts.each do |contact| %>
        <tr>
          <td><%= contact.email %></td>
          <td><%= contact.name %></td>
          <td><%= contact.tel %></td>
          <td>
            <% unless contact.picture %>
              <i class="fa fa-user fa-4"></i>
            <% else %>
              <%= image_tag contact.picture, width: "50px"%>
            <% end %>
          </td>
        </tr>
      <% end %>

    </table>
  </div>
</div>
